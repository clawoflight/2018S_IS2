	eprint = {1703.09809v1},
	localfile = {Zhang2017.pdf},
	month = mar,
	primaryclass = {cs.CR},
	title = {{Understanding IoT Security Through the Data Crystal Ball: Where We Are Now and Where We Are Going to Be.}},
	url = {http://arxiv.org/abs/1703.09809v1; http://arxiv.org/pdf/1703.09809v1},
	x-color = {#0033ff},
	x-fetchedfrom = {arXiv.org},
	year = {2017}
