	primaryclass = {cs.CR},
	title = {{xLED: Covert Data Exfiltration from Air-Gapped Networks via Router LEDs.}},
	journal = {CoRR},
	volume = {abs/1706.01140v1},
	url = {http://arxiv.org/abs/1706.01140v1; http://arxiv.org/pdf/1706.01140v1},
